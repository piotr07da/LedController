<mui:ModernWindow x:Class="LedController2Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="LedController" Width="{StaticResource WindowW}" Height="{StaticResource WindowH}">
    
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="color">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="COLOR SETTINGS" Source="/Pages/ColorSettings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="sound">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="SOUND SETTINGS" Source="/Pages/SoundSettings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
</mui:ModernWindow>